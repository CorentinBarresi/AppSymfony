{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
    <h1>Trip</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trip.id }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ trip.destination }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ trip.created_at ? trip.created_at|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trip.description }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ trip.duree }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td ><img src="{{trip.image}}" class="card-img-top" alt="img"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_admin_trip_index') }}">back to list</a>
    <a class="btn btn-primary" href="{{ path('app_admin_trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('admin_trip/_delete_form.html.twig') }}
{% endblock %}
